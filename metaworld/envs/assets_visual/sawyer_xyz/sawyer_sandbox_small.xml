<mujoco>
    <include file="../scene/basic_scene.xml"/>
    <include file="../objects/assets/xyz_base_dependencies.xml"/>
    <include file="../objects/assets/assembly_peg_dependencies.xml"/>
    <include file="../objects/assets/dial_dependencies.xml"/>
    <include file="../objects/assets/faucet_dependencies.xml"/>
    <include file="../objects/assets/hammer_dependencies.xml"/>

    <worldbody>
        <include file="../objects/assets/xyz_base.xml"/>

        <!--Assembly-->
        <body name="RoundNut" pos="0.1 0.4 0.02" quat="1 0 0 1">
            <freejoint/>
            <include file="../objects/assets/assembly_peg.xml"/>
        </body>

        <body name="peg" pos="0.2 0.8 0.05">
            <geom material="asmbly_metal" pos="0 0 0" rgba="1 0.3 0.3 1" size="0.02 0.05" type="cylinder" conaffinity="1" contype="1" group="1" friction="1 0.005 0.0001"/>
            <site name="pegTop" pos="0 0 0.05" size="0.005" rgba="0 0.8 0 0"/>
        </body>

        <!--Dial-->
        <body name="dial" pos="0.2 0.5 0.">
            <include file="../objects/assets/dial.xml"/>
            <site name="dialStart" pos="0 -0.05 0.035" size="0.005" rgba="0 0 1 0"/>
        </body>

        <!--Faucet-->
        <body name="faucetBase" pos="0.3 0.8 0">
            <include file="../objects/assets/faucet.xml"/>
            <site name="handleStartOpen" pos="-0.015 -0.175 0.125" size="0.005" rgba="1 1 1 0"/>
            <site name="handleStartClose" pos="0.015 -0.175 0.125" size="0.005" rgba="0 0 0 0"/>
        </body>

        <!--Hammer-->
        <body name="hammerbody" pos="-0.1 0.4 0.02">
            <freejoint/>
            <include file="../objects/assets/hammer.xml"/>
        </body>

        <body name="box" pos="-0.4 0.85 0">
            <include file="../objects/assets/hammerblock.xml"/>
            <site name="nailHead" pos="0 -.215 .11" size="0.005" rgba="0.8 0 0 0"/>
        </body>

    </worldbody>

    <actuator>
        <position ctrllimited="true" ctrlrange="-1 1" joint="r_close" kp="400"  user="1"/>
        <position ctrllimited="true" ctrlrange="-1 1" joint="l_close" kp="400"  user="1"/>
    </actuator>
    <equality>
        <weld body1="mocap" body2="hand" solref="0.02 1"/>
    </equality>
</mujoco>
